<%= form_with(model: bagmon, local: true, html: {class: "d-flex flex-column gap-3"}) do |form| %>
  <% if bagmon.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(bagmon.errors.count, "error") %> prohibited this bagmon from being saved:</h2>

      <ul>
      <% bagmon.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :identificator %>
    <%= form.text_field :identificator, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :photo %>
    <%= form.text_field :photo, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :category_id %>
    <%= form.select(:category_id , @category_options, {include_blank: 'Selecione...'}, {:multiple => false, class: "form-control"}) %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>